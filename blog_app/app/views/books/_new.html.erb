 <!--post creation-->

    <div class="row align-items-md-stretch">
      <div class="col-md-5" style="border-right:1px solid #dcdee0;">
        <div class="h-100 p-5 bg-light rounded-3">
        
             
                    <% if @book.errors.any? %>
                        <div style="color: red">
                        <!--<h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>-->

                        <ul>
                            <% @book.errors.each do |error| %>
                            <li><%= error.full_message %></li>
                            <% end %>
                        </ul>
                        </div>
                    <% end %>
                  <div class="form-group">
                        <small id="bookTitle" class="form-text text-muted ">Book name</small>
                        <%= text_field 'book', 'title',class: 'form-control mt-2'%>
                        
                  </div>
                  <div class="form-group">
                        <small id="bookPrice" class="form-text text-muted ">Price</small>
                        <%= number_field 'book', 'price',class: 'form-control mt-2'%>
                        
                  </div>
                  <div class="form-group">
                        <small id="bookCategory" class="form-text text-muted ">Choose subject</small>
                        <%= collection_select(:book, :subject_id, @subjects, :subject_id, :name, {prompt: "select a category"}, {class: "form-control mt-2"}) %>
                    
                  </div>
                <!--<div class="form-group">                 
                  <input type="file" class="form-control-file mt-3" id="exampleFormControlFile1">
                  <small id="emailHelp" class="form-text text-muted ">You can choose photos from your gallery.</small>
                  </div-->
                    <div class="form-group">
                        <small id="bookDescription" class="form-text text-muted ">Description</small>
                        <%= text_area 'book', 'description',size:'3*5',class: 'form-control mt-2'%>
                        
                  </div>
                  <div class="form-group mt-3">
                   <%if @book.image.attached?%>
                   <%= image_tag @book.image,style:"width:200px;display:block;"%>
                   <%end%>
                   </div>
                   <div class="form-group mt-3">
                   <small id="bookImg" class="form-text text-muted ">Upload image</small>
                   <%= file_field_tag 'image',accept: 'image/png,image/gif,image/jpeg',multiple: false,class: 'form-control '%>
                   </div>
                  <%= submit_tag 'save' ,class:"btn btn-dark mt-3 px-5 py-2"%>
                  
             
                     
        </div>
      </div>
      <!--ends-->