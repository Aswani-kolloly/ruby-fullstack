<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table>
  <tr>
  <th>Title</th>
  <th>Price</th>
  <th>Description</th>
  </tr>
  <% @books.each do |book| %>
<tr>
    <%= render partial: 'book',locals: { book: book } %>
    <td>
      <%= link_to "Show this book", book_path(book) %>
    </td>
</tr>
  <% end %>
  </table>
</div>

<%= link_to "New book", new_book_path %>