<div class="container py-4">
<div class="row d-flex justify-content-center">
<div class="col-md-6 col-xs-5 " >
<div class="h-100 p-5 bg-light rounded-3">
<Center>
<h2>Sign up</h2></center>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group">
    <%= f.label :email,class:'form-text text-muted' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control mt-2' %>
  </div>

   <div class="form-group mt-2">
    <%= f.label :password ,class:'form-text text-muted'%>
    <% if @minimum_password_length %>
    <em class='form-text text-muted'>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class:'form-control mt-2'%>
  </div>

  <div class="form-group mt-2">
    <%= f.label :password_confirmation,class:'form-text text-muted' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control mt-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class:"btn btn-primary mt-3 px-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>