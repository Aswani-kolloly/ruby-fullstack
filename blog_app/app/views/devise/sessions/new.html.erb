<div class="container py-4">
<div class="row d-flex justify-content-center">
<div class="col-md-6 col-xs-5 " >
<div class="h-100 p-5 bg-light rounded-3">
<center><h2>Log in</h2></center>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
     <%= f.label :email,class:'form-text text-muted' %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control mt-2'%>
  </div>
  <div class="form-group mt-2">
     <%= f.label :password,class:'form-text text-muted' %><br />
     <%= f.password_field :password, autocomplete: "current-password",class:'form-control mt-2'%>
  </div>
  <% if devise_mapping.rememberable? %>
  <div class="form-group mt-2">
     <%= f.check_box :remember_me,class:'form-check-input '%>
     <%= f.label :remember_me ,class:'form-check-label' %>
  </div>
  <% end %> 
 
    <%= f.submit "Log in",class:"btn btn-primary mt-3 px-3" %>
 
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>